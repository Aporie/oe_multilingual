{
    "name": "openeuropa/oe_multilingual",
    "description": "Multilingual features for the OpenEuropa project.",
    "type": "drupal-module",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "drupal/core": "^9.4 || ^10",
        "drupal/language_selection_page": "dev-2.x",
        "drupal/pathauto": "^1.8"
    },
    "require-dev": {
        "composer/installers": "^1.11",
        "drupal/core-composer-scaffold": "^9.4 || ^10",
        "drupal/drupal-extension": "^5.0",
        "drupal/redirect": "^1.6",
        "drush/drush": "^11.1",
        "mikey179/vfsstream": "^1.6.10",
        "openeuropa/behat-transformation-context": "^0.2",
        "openeuropa/code-review": "^2.0.0-alpha6",
        "openeuropa/task-runner-drupal-project-symlink": "^1.0-beta6",
        "phpspec/prophecy-phpunit": "^2",
        "symfony/phpunit-bridge": "^6.2"
    },
    "_readme": [
        "Explicit minimum version requirement of symfony/phpunit-bridge to replace drupal/core-dev testing classes and traits.",
        "Explicit requirement of mikey179/vfsstream to remove when drupal/core-dev is reinstated."
    ],
    "scripts": {
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "post-update-cmd": "./vendor/bin/run drupal:site-setup"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "autoload": {
        "psr-4": {
            "Drupal\\oe_multilingual\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\oe_multilingual\\": "./tests/src"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/profiles/contrib/{$name}": ["type:drupal-profile"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"]
        },
        "patches": {},
        "drush": {
            "services": {
                "drush.services.yml": "^9"
            }
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./build"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "phpro/grumphp": true
        }
    }
}
