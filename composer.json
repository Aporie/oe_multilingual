{
    "name": "openeuropa/oe_multilingual",
    "description": "Multilingual features for the OpenEuropa project.",
    "type": "drupal-module",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.3",
        "drupal/core": "^8.9 || ^9",
        "drupal/language_selection_page": "^2.7",
        "drupal/pathauto": "^1.6"
    },
    "require-dev": {
        "composer/installers": "~1.5",
        "drupal/core-composer-scaffold": "^8.9 || ^9",
        "drupal/config_devel": "~1.2",
        "drupal/devel": "~4.1",
        "drupal/drupal-extension": "~4.0",
        "drupal/redirect": "^1.6",
        "drush/drush": "~10.3",
        "openeuropa/behat-transformation-context": "~0.1",
        "openeuropa/code-review": "~1.6",
        "openeuropa/drupal-core-require-dev": "^8.9 || ^9",
        "openeuropa/task-runner-drupal-project-symlink": "^1.0",
        "phpunit/phpunit": "^7 || ^8"
    },
    "scripts": {
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "post-update-cmd": "./vendor/bin/run drupal:site-setup"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "autoload": {
        "psr-4": {
            "Drupal\\oe_multilingual\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\oe_multilingual\\": "./tests/src"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/profiles/contrib/{$name}": ["type:drupal-profile"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"]
        },
        "patches": {
            "drupal/language_selection_page": {
                "https://www.drupal.org/project/language_selection_page/issues/3212711": "https://git.drupalcode.org/project/language_selection_page/-/merge_requests/1.diff"
            }
        },
        "drush": {
            "services": {
                "drush.services.yml": "^9"
            }
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./build"
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
