{
    "name": "openeuropa/oe_multilingual",
    "description": "Multilingual features for the OpenEuropa project.",
    "type": "drupal-module",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2",
        "drupal/core": "^8.7",
        "drupal/language_selection_page": "2.3",
        "drupal/pathauto": "^1.6"
    },
    "require-dev": {
        "composer/installers": "~1.5",
        "consolidation/annotated-command": "^2.8.2",
        "consolidation/robo": "~1.4",
        "drupal-composer/drupal-scaffold": "^2.5.2",
        "drupal/config_devel": "~1.2",
        "drupal/devel": "~1.2",
        "drupal/drupal-extension": "~4.0",
        "drupal/redirect": "^1.4",
        "drush/drush": "~9.0@stable",
        "openeuropa/behat-transformation-context": "~0.1",
        "openeuropa/code-review": "~1.0@beta",
        "openeuropa/drupal-core-require-dev": "^8.7",
        "openeuropa/task-runner": "~1.0.0-beta6",
        "phpunit/phpunit": "~6.0",
        "symfony/browser-kit": "~3.0 || ~4.0"
    },
    "_readme": [
        "We explicitly require consolidation/robo to allow lower 'composer update --prefer-lowest' to complete successfully.",
        "We explicitly require consolidation/annotated-command to allow lower 'composer update --prefer-lowest' to complete successfully."
    ],
    "scripts": {
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "post-update-cmd": "./vendor/bin/run drupal:site-setup"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "autoload": {
        "psr-4": {
            "Drupal\\oe_multilingual\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\oe_multilingual\\": "./tests/"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/profiles/contrib/{$name}": ["type:drupal-profile"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"]
        },
        "patches": {
            "drupal/language_selection_page": {
                "https://www.drupal.org/project/language_selection_page/issues/3105633": "https://www.drupal.org/files/issues/2020-01-27/3105633-6-stable.patch"
            }
        },
        "drush": {
            "services": {
                "drush.services.yml": "^9"
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
