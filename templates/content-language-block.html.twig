{#
/**
 * @file
 * Default theme implementation for the content language switcher block.
 *
 * Available variables:
 * - unavailable: Name of the unavailable translationlanguage  .
 * - current: Name of the available translation language.
 *
 * @see ./core/modules/system/templates/links.html.twig
 *
 * @see template_preprocess_content_language_block()
 *
 * @ingroup themeable
 */
#}
{% if links -%}
  <span class="current">{{ current }}</span>
  <ul{{ attributes }}>
    {%- for item in links -%}
      <li{{ item.attributes }}>
        {%- if item.link -%}
          {{ item.link }}
        {%- elseif item.text_attributes -%}
          <span{{ item.text_attributes }}>{{ item.text }}</span>
        {%- else -%}
          {{ item.text }}
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
{%- endif %}
